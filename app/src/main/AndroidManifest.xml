<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.rideshare">

    <uses-feature
        android:glEsVersion="0x00030001"
        android:required="true" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/taxi_icon"
        android:label="@string/app_name"
        android:roundIcon="@drawable/taxi_icon"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".VerifyEmailActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".SignUpActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ShowTripActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ShowRecommendedTripActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ShowRecommendationsActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ShowHistoryActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".CreateBookingActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>